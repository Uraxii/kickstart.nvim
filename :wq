return {
  'folke/noice.nvim',
  event = 'VeryLazy',
  opts = {
    views = {
      popup = {
        border = {
          style = 'single', -- disables border lines
          highlight = 'Normal', -- disables border highlight
        },
      },
      cmdline_popup = {
        border = {
          style = 'single',
          highlight = 'Normal',
        },
        position = {
          row = 5,
          col = '50%',
        },
        size = {
          width = 60,
          height = 'auto',
        },
        win_options = {
          winhighlight = { Normal = 'Normal', FloatBorder = 'NONE' },
        },
        -- Set your custom prompt here:
        prompt = '>> ', -- <- Change this to whatever you like!
      },
      popupmenu = {
        border = {
          style = 'single',
          highlight = 'Normal',
        },
      },
      split = {
        border = {
          style = 'single',
          highlight = 'Normal',
        },
      },
      mini = {
        border = {
          style = 'single',
          highlight = 'Normal',
        },
      },
    },
  },
  dependencies = {
    'MunifTanjim/nui.nvim',
    'rcarriga/nvim-notify',
  },
  config = function(_, opts)
    require('noice').setup(opts)
    -- Disable all noice-specific border and text highlights
    local hl_groups = {
      'NoiceCmdlinePopupBorder',
      'NoiceCmdlinePopupTitle',
      'NoiceCmdlinePopup',
      'NoicePopupBorder',
      'NoicePopupmenuBorder',
      'NoicePopupmenu',
      'NoiceLspProgressTitle',
      'NoiceLspProgressClient',
      'NoiceLspProgressSpinner',
      -- Add more as needed if you spot extra highlight groups
    }
    for _, group in ipairs(hl_groups) do
      vim.api.nvim_set_hl(0, group, { fg = 'NONE', bg = 'NONE' })
    end
  end,
}
